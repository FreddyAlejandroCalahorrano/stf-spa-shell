{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jest"
    ],
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "paths": {
      "@interfaces/*": [
        "src/app/types/*"
      ],
      "@environments/*": [
        "src/environments/*"
      ]
    }
  },
  "files": [
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
